<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="custom_dialog_theme" parent="@android:style/Theme.Translucent">
        <item name="android:windowBackground">@color/trans_bg</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>    
    
	<!-- high score tab bar -->
	
	<style name="Segment">
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/f14</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    
	<style name="Segment.Contact">
        <item name="android:textSize">@dimen/f12</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_weight">1</item>
    </style>
    
</resources>
