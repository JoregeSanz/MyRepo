<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayColor"
    android:orientation="vertical" >
    
    <!-- title bar -->
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/titlebarColor"
	    android:orientation="horizontal"
	    >
	    
        <Button
            android:id="@+id/btn_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Done"
            android:textSize="@dimen/titleSize"
            android:layout_alignParentLeft="true" 
            android:layout_centerVertical="true"
            />
        
        <TextView
            android:text="About Real Solitaire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/titleFontColor"
            android:textSize="@dimen/titleSize"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_centerInParent="true"
            />
        
	</RelativeLayout>
	
    <!-- seperate line -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grayFontColor"
        >
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            >
            
            <!-- description -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                >
                
                <ImageView
                    android:layout_height="90dp"
                    android:layout_width="90dp"
                    android:src="@drawable/about_img"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" 
                    />
                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    >
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Real Solitaire Free"
                        android:textColor="@color/blackColor"
                        android:textSize="18sp"
                        />
                    
                    <TextView
                        android:id="@+id/txt_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blackColor"
                        android:text="Version 1.0"
                        />
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/grayFontColor"
                        android:text="Copyright @ 2015 Bayar, Inc. All right reserved."
                        />
                    
                </LinearLayout>
                
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grayFontColor" >
            </LinearLayout>

            <!-- cell -->

            <RelativeLayout
                android:id="@+id/setting_visitsite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/row"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="10dp"
                    android:text="Visit Web Site"
                    android:textColor="@color/blackColor"
                    android:textSize="@dimen/titleSize" />
                
            </RelativeLayout>

            <!-- inner seperate line -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@color/grayFontColor" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/setting_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/row"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="10dp"
                    android:text="Send Feedback"
                    android:textColor="@color/blackColor"
                    android:textSize="@dimen/titleSize" />

            </RelativeLayout>

            <!-- seperate line -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grayFontColor" >
            </LinearLayout>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:textColor="@color/grayFontColor"
                android:textSize="@dimen/titleSize" />

            <!-- seperate line -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grayFontColor" >
            </LinearLayout>
            
            <RelativeLayout
                android:id="@+id/setting_tell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/row"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="10dp"
                    android:text="Tell a Friend"
                    android:textColor="@color/blackColor"
                    android:textSize="@dimen/titleSize" />
                
            </RelativeLayout>
            
            <!-- seperate line -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grayFontColor" >
            </LinearLayout>
            
            <!-- how to play bar -->
            <!-- header -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:textColor="@color/grayFontColor"
                android:textSize="@dimen/titleSize" />

            <!-- seperate line -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grayFontColor" >
            </LinearLayout>

            <!-- Follow Us on Twitter -->

            <RelativeLayout
                android:id="@+id/setting_twitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/row"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/twitter_icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/twitter" >
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/twitter_icon"
                    android:layout_marginLeft="35dp"
                    android:padding="10dp"
                    android:text="Follow Us on Twitter"
                    android:textColor="@color/blackColor"
                    android:textSize="@dimen/titleSize" />
            </RelativeLayout>

            <!-- inner seperate line -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@color/grayFontColor" />
            </LinearLayout>

            <!-- Facebook -->

            <RelativeLayout
                android:id="@+id/setting_facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/row"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/facebook_icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/fb" >
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/facebook_icon"
                    android:layout_marginLeft="35dp"
                    android:padding="10dp"
                    android:text="Like This on Facebook"
                    android:textColor="@color/blackColor"
                    android:textSize="@dimen/titleSize" />

            </RelativeLayout>

            <!-- seperate line -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grayFontColor" >
            </LinearLayout>
        </LinearLayout>
        
    </ScrollView>
    
</LinearLayout>
